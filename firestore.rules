rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    match /users/{userId} {
      // Users can read their own profiles, admins can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // Allow listing users for leaderboard (limited)
      allow list: if isAuthenticated() && 
                  (request.query.limit <= 100 || request.query.limit == null);
      
      // Users can create their own profile
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can update their own profile, admins can update any
      allow update: if isOwner(userId) || isAdmin();
    }

    match /quiz/{quizId} {
      // Anyone can read published quizzes
      // Only admins can create/update/delete quizzes
      allow read: if resource.data.published == true || isAdmin();
      
      // Allow listing quizzes with limits
      allow list: if isAuthenticated() && 
                  (request.query.limit <= 100 ||
                   request.query.limit == null);
      
      allow create, update, delete: if isAdmin();
    }

    match /reports/{reportId} {
      // Allow all authenticated users to read reports
      allow read: if isAuthenticated();
      
      // Allow listing reports for leaderboard
      allow list: if isAuthenticated();
      
      // Only the owner can create reports
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false; // Reports should be immutable
    }

    match /announcements/{announcementId} {
      // All authenticated users can read active announcements
      allow read: if isAuthenticated() && resource.data.isActive == true;
      
      // Allow listing announcements
      allow list: if isAuthenticated();
      
      // Only admins can create/update/delete announcements
      allow create, update, delete: if isAdmin();
    }

    match /userAnnouncements/{userAnnouncementId} {
      // Allow all authenticated users to read userAnnouncements for filtering
      allow read: if isAuthenticated();
      
      // Users can create their own announcement interactions
      allow create: if isAuthenticated() && 
                   request.resource.data.userId == request.auth.uid;
      
      // Only admins can update/delete
      allow update, delete: if isAdmin();
    }
    
    //logs collection - only admin access
    match /logs/{logId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }
    
    // All other collections are admin-only by default
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}